<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@id/collapsed">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/searchInput">

        </OnClick>
    </Transition>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/searchInput"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchTabs" />

        <Constraint
            android:id="@+id/searchResultsRecView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/constraint_match"
            app:layout_constraintBottom_toBottomOf="@id/centerOfInput"
            app:layout_constraintEnd_toEndOf="@id/searchInput"
            app:layout_constraintStart_toStartOf="@id/searchInput"
            app:layout_constraintTop_toBottomOf="@id/centerOfInput" />

        <Constraint
            android:id="@+id/backgroundInputResults"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="@dimen/constraint_match"
            app:layout_constraintBottom_toBottomOf="@id/centerOfInput"
            app:layout_constraintEnd_toEndOf="@id/searchInput"
            app:layout_constraintStart_toStartOf="@id/searchInput"
            app:layout_constraintTop_toTopOf="@id/centerOfInput" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@+id/searchInput"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchTabs" />

        <Constraint
            android:id="@+id/searchResultsRecView"
            android:layout_width="wrap_content"
            android:layout_height="480dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintEnd_toEndOf="@id/searchInput"
            app:layout_constraintStart_toStartOf="@id/searchInput"
            app:layout_constraintTop_toBottomOf="@id/searchInput" />

        <Constraint
            android:id="@+id/backgroundInputResults"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="@dimen/constraint_match"
            app:layout_constraintBottom_toBottomOf="@id/belowResultsSpace"
            app:layout_constraintEnd_toEndOf="@id/searchInput"
            app:layout_constraintStart_toStartOf="@id/searchInput"
            app:layout_constraintTop_toTopOf="@id/centerOfInput" />

    </ConstraintSet>

</MotionScene>