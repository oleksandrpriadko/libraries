<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@id/collapsed"
        app:motionInterpolator="android.view.animation.AccelerateDecelerateInterpolator" />

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint
            android:id="@+id/searchLayout"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />
        <Constraint
            android:id="@id/carouselLoadingLayout"
            motion:visibilityMode="ignore">
            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/expanded">
        <Constraint
            android:id="@+id/searchLayout"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="@dimen/constraint_match"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />
        <Constraint
            android:id="@id/carouselLoadingLayout"
            motion:visibilityMode="ignore">

            <PropertySet app:visibilityMode="ignore"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>