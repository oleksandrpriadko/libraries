<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/cocktail_layout_input"
        android:layout_width="@dimen/constraint_match"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <com.android.oleksandrpriadko.recycler_view.FlingRecyclerView
        android:id="@+id/itemsCarouselRecyclerView"
        android:layout_width="@dimen/constraint_match"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:flingMode="low"
        app:layoutManager="com.android.oleksandrpriadko.recycler_view.ScalableLinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchWrapLayout"
        app:layout_constraintVertical_bias="1.0"
        tools:itemCount="15"
        tools:listitem="@layout/cocktail_item_cocktail_search_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>