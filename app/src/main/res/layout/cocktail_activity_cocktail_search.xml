<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchWrapLayout"
        android:layout_width="@dimen/constraint_match"
        android:layout_height="wrap_content"
        android:background="@drawable/cocktail_background_search_wrap"
        android:elevation="2dp"
        android:outlineProvider="background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.android.oleksandrpriadko.ui.attachedtabs.AttachedTabsView
            android:id="@+id/searchTabs"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="wrap_content"
            android:background="@color/cocktail_background_screen"
            android:paddingTop="5dp"
            app:areTabsOnTop="true"
            app:curveColorTabs="@color/cocktail_background_secondary"
            app:floatingDrawable="@drawable/cocktail_selector_floating"
            app:layout_constraintBottom_toTopOf="@id/belowTabsSpace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectedItem="1">

            <TextView
                android:id="@+id/cocktailTab"
                style="@style/SearchTabCocktail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cocktail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ingredientTab"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ingredientTab"
                style="@style/SearchTabCocktail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/glassTab"
                app:layout_constraintStart_toEndOf="@id/cocktailTab"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/glassTab"
                style="@style/SearchTabCocktail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glass"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ingredientTab"
                app:layout_constraintTop_toTopOf="parent" />

        </com.android.oleksandrpriadko.ui.attachedtabs.AttachedTabsView>

        <Space
            android:id="@+id/belowTabsSpace"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            app:layout_constraintBottom_toTopOf="@id/searchInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchTabs" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchInput"
            style="@style/InputCocktail"
            android:layout_width="@dimen/constraint_match"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_margin_top_bottom_card"
            android:layout_marginEnd="@dimen/main_margin_left_right_card"
            android:layout_marginStart="@dimen/main_margin_left_right_card"
            android:elevation="15dp"
            android:hint="Input text"
            android:imeOptions="actionSearch"
            android:outlineProvider="background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/belowTabsSpace" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.android.oleksandrpriadko.recycler_view.FlingRecyclerView
        android:id="@+id/itemsCarouselRecyclerView"
        android:layout_width="@dimen/constraint_match"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:flingMode="low"
        app:layoutManager="com.android.oleksandrpriadko.recycler_view.ScalableLinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchWrapLayout"
        app:layout_constraintVertical_bias="1.0"
        tools:itemCount="15"
        tools:listitem="@layout/cocktail_item_cocktail_search_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>