<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.android.oleksandrpriadko.overlay.OverlayTestActivity"
    tools:ignore="HardcodedText">

    <FrameLayout
        android:background="@android:color/darker_gray"
        android:id="@+id/layout_overlay_container"
        android:layout_above="@id/display"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/display"
        android:layout_above="@id/popAll"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Display overlay"/>

    <Button
        android:id="@+id/popAll"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Pop all overlays"/>

</RelativeLayout>